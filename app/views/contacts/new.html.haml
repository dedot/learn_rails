- content_for :title do
  Contact
%h3 Contact
= simple_form_for @contact do |form|
  = form.error_notification
  = form.input :name, autofocus: true
  = form.input :email
  = form.input :content, as: :text, :input_html => { :class => "span6" }
  = form.button :submit, 'Submit', class: 'btn-primary'
